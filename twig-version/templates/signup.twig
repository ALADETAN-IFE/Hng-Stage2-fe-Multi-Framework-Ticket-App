{% extends 'base.twig' %}

{% block title %}Sign Up - TicketStressed - Twig Version{% endblock %}

{% block content %}
<main class="min-h-screen max-w-[1440px] w-full relative bg-gradient-to-br from-teal-50 via-gray-50 to-indigo-100 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
   <div
      class="absolute top-20 left-10 w-32 h-32 bg-teal-200 rounded-full opacity-60 animate-pulse"
      data-testid="test-twig-signup-circle-1"
    ></div>
    <div
      class="absolute bottom-20 right-20 w-24 h-24 bg-blue-200 rounded-full opacity-50 animate-bounce"
      data-testid="test-twig-signup-circle-2"
    ></div>
    <div
      class="absolute top-1/2 left-1/4 w-16 h-16 bg-indigo-200 rounded-full opacity-40 animate-pulse"
      data-testid="test-twig-signup-circle-3"
    ></div>

  <div class="max-w-md w-full space-y-8">
    <section class="bg-white rounded-2xl shadow-xl p-8">
      <a href="/" class="relative z-10 mb-4 inline-flex items-center gap-2 text-sm text-gray-600 hover:text-gray-800">
        ‚Üê Go back
      </a>
      
      <header class="text-center">
        <h2 class="text-3xl font-bold text-gray-900 mb-2">
          Join <span class="text-teal-600">TicketStressed</span>
        </h2>
        <p class="text-gray-600 mb-8">Create your account to get started</p>
      </header>

  {# Errors are shown via toast in base.twig #}

      <form action="/auth/signup" method="POST" class="space-y-6" id="signupForm" novalidate>
        <div>
          <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
            Full Name
          </label>
          <input
            id="name"
            name="name"
            type="text"
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent transition-colors"
            placeholder="Enter your full name"
            aria-describedby="error-name"
          />
          <p id="error-name" class="mt-2 text-sm text-red-600 hidden"></p>
        </div>

        <div>
          <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
            Email Address
          </label>
          <input
            id="email"
            name="email"
            type="email"
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent transition-colors"
            placeholder="Enter your email"
            aria-describedby="error-email"
          />
          <p id="error-email" class="mt-2 text-sm text-red-600 hidden"></p>
        </div>

        <div>
          <label for="password" class="block text-sm font-medium text-gray-700 mb-2">
            Password
          </label>
          <div class="relative">
          <input
            id="password"
            name="password"
            type="password"
            minlength="6"
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent transition-colors"
            placeholder="Create a password"
            aria-describedby="error-password"
          />
          <button
            type="button"
            id="toggleSignupPassword"
            class="absolute inset-y-0 right-3 flex items-center px-2 text-gray-500"
            aria-label="Show password"
            aria-pressed="false"
          >
            <svg id="iconSignupEye" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
            </svg>
            <svg id="iconSignupEyeOff" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
            </svg>
          </button>
          </div>
          <p id="error-password" class="mt-2 text-sm text-red-600 hidden"></p>
        </div>

        <div>
          <label for="confirmPassword" class="block text-sm font-medium text-gray-700 mb-2">
            Confirm Password
          </label>
          <div class="relative">
          <input
            id="confirmPassword"
            name="confirmPassword"
            type="password"
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent transition-colors"
            placeholder="Confirm your password"
            aria-describedby="error-confirmPassword"
          />
          <button
            type="button"
            id="toggleSignupConfirmPassword"
            class="absolute inset-y-0 right-3 flex items-center px-2 text-gray-500"
            aria-label="Show confirm password"
            aria-pressed="false"
          >
            <svg id="iconSignupConfirmEye" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
            </svg>
            <svg id="iconSignupConfirmEyeOff" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
            </svg>
          </button>
          </div>
          <p id="error-confirmPassword" class="mt-2 text-sm text-red-600 hidden"></p>
        </div>

        <button
          type="submit"
          id="signupSubmit"
          class="w-full bg-teal-600 hover:bg-teal-700 text-white font-semibold py-3 px-4 rounded-lg transition-colors duration-200 focus:ring-2 focus:ring-teal-500 focus:ring-offset-2"
        >
          Create Account
        </button>
      </form>

      <script>
        (function(){
          const form = document.getElementById('signupForm');
          const nameEl = document.getElementById('name');
          const emailEl = document.getElementById('email');
          const passwordEl = document.getElementById('password');
          const confirmEl = document.getElementById('confirmPassword');
          const submit = document.getElementById('signupSubmit');

          function clearError(el) {
            const p = document.getElementById('error-' + el.id);
            if (p) { p.textContent = ''; p.classList.add('hidden'); }
            el.removeAttribute('aria-invalid');
          }

          function setError(el, msg) {
            const p = document.getElementById('error-' + el.id);
            if (p) { p.textContent = msg; p.classList.remove('hidden'); }
            el.setAttribute('aria-invalid', 'true');
          }

          form.addEventListener('submit', function(e){
            const newErrors = {};
            // Name
            if (!nameEl.value.trim()) {
              newErrors.name = 'Name is required';
            } else if (nameEl.value.trim().length < 2) {
              newErrors.name = 'Name must be at least 2 characters';
            }

            // Email
            if (!emailEl.value) {
              newErrors.email = 'Email is required';
            } else if (!/\S+@\S+\.\S+/.test(emailEl.value)) {
              newErrors.email = 'Email is invalid';
            }

            // Password
            if (!passwordEl.value) {
              newErrors.password = 'Password is required';
            } else if (passwordEl.value.length < 6) {
              newErrors.password = 'Password must be at least 6 characters';
            }

            // Confirm
            if (!confirmEl.value) {
              newErrors.confirmPassword = 'Please confirm your password';
            } else if (passwordEl.value !== confirmEl.value) {
              newErrors.confirmPassword = 'Passwords do not match';
            }

            // Clear previous
            ['name','email','password','confirmPassword'].forEach(id => {
              const el = document.getElementById(id);
              if (el) clearError(el);
            });

            // If errors, show inline and prevent submit
            if (Object.keys(newErrors).length > 0) {
              e.preventDefault();
              Object.keys(newErrors).forEach(k => {
                const el = document.getElementById(k === 'confirmPassword' ? 'confirmPassword' : k);
                if (el) setError(el, newErrors[k]);
              });
              return;
            }

            // set loading state
            submit.disabled = true;
            submit.textContent = 'Creating Account...';
          });

          // Signup password toggles
          const toggleSignup = document.getElementById('toggleSignupPassword');
          if (toggleSignup) {
            const pwd = document.getElementById('password');
            const eye = document.getElementById('iconSignupEye');
            const eyeOff = document.getElementById('iconSignupEyeOff');
            toggleSignup.addEventListener('click', function () {
              const pressed = toggleSignup.getAttribute('aria-pressed') === 'true';
              if (pressed) {
                pwd.type = 'password';
                toggleSignup.setAttribute('aria-pressed', 'false');
                toggleSignup.setAttribute('aria-label', 'Show password');
                eye.classList.remove('hidden');
                eyeOff.classList.add('hidden');
              } else {
                pwd.type = 'text';
                toggleSignup.setAttribute('aria-pressed', 'true');
                toggleSignup.setAttribute('aria-label', 'Hide password');
                eye.classList.add('hidden');
                eyeOff.classList.remove('hidden');
              }
            });
          }

          const toggleSignupConfirm = document.getElementById('toggleSignupConfirmPassword');
          if (toggleSignupConfirm) {
            const pwdc = document.getElementById('confirmPassword');
            const eyeC = document.getElementById('iconSignupConfirmEye');
            const eyeOffC = document.getElementById('iconSignupConfirmEyeOff');
            toggleSignupConfirm.addEventListener('click', function () {
              const pressed = toggleSignupConfirm.getAttribute('aria-pressed') === 'true';
              if (pressed) {
                pwdc.type = 'password';
                toggleSignupConfirm.setAttribute('aria-pressed', 'false');
                toggleSignupConfirm.setAttribute('aria-label', 'Show confirm password');
                eyeC.classList.remove('hidden');
                eyeOffC.classList.add('hidden');
              } else {
                pwdc.type = 'text';
                toggleSignupConfirm.setAttribute('aria-pressed', 'true');
                toggleSignupConfirm.setAttribute('aria-label', 'Hide confirm password');
                eyeC.classList.add('hidden');
                eyeOffC.classList.remove('hidden');
              }
            });
          }
        })();
      </script>

      <div class="mt-6 text-center">
        <p class="text-gray-600">
          Already have an account?
          <a href="/auth/login" class="text-teal-600 hover:text-teal-700 font-semibold relative z-10">
            Sign in here
          </a>
        </p>
      </div>
    </section>
  </div>
</main>
{% endblock %}
