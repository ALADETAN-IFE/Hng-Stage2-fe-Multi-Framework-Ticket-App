{% extends 'base.twig' %}

{% block title %}Sign Up - TicketStressed{% endblock %}

{% block content %}
<main class="min-h-screen max-w-[1440px] w-full relative bg-gradient-to-br from-teal-50 via-gray-50 to-indigo-100 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
   <div
      class="absolute top-20 left-10 w-32 h-32 bg-teal-200 rounded-full opacity-60 animate-pulse"
      data-testid="test-twig-signup-circle-1"
    ></div>
    <div
      class="absolute bottom-20 right-20 w-24 h-24 bg-blue-200 rounded-full opacity-50 animate-bounce"
      data-testid="test-twig-signup-circle-2"
    ></div>
    <div
      class="absolute top-1/2 left-1/4 w-16 h-16 bg-indigo-200 rounded-full opacity-40 animate-pulse"
      data-testid="test-twig-signup-circle-3"
    ></div>

  <div class="max-w-md w-full space-y-8">
    <section class="bg-white rounded-2xl shadow-xl p-8">
      <a href="/" class="relative z-10 mb-4 inline-flex items-center gap-2 text-sm text-gray-600 hover:text-gray-800">
        ‚Üê Go back
      </a>
      
      <header class="text-center">
        <h2 class="text-3xl font-bold text-gray-900 mb-2">
          Join <span class="text-teal-600">TicketStressed</span>
        </h2>
        <p class="text-gray-600 mb-8">Create your account to get started</p>
      </header>

  {# Errors are shown via toast in base.twig #}

      <form action="/auth/signup" method="POST" class="space-y-6" id="signupForm" novalidate>
        <div>
          <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
            Full Name
          </label>
          <input
            id="name"
            name="name"
            type="text"
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent transition-colors"
            placeholder="Enter your full name"
            aria-describedby="error-name"
          />
          <p id="error-name" class="mt-2 text-sm text-red-600 hidden"></p>
        </div>

        <div>
          <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
            Email Address
          </label>
          <input
            id="email"
            name="email"
            type="email"
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent transition-colors"
            placeholder="Enter your email"
            aria-describedby="error-email"
          />
          <p id="error-email" class="mt-2 text-sm text-red-600 hidden"></p>
        </div>

        <div>
          <label for="password" class="block text-sm font-medium text-gray-700 mb-2">
            Password
          </label>
          <input
            id="password"
            name="password"
            type="password"
            minlength="6"
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent transition-colors"
            placeholder="Create a password"
            aria-describedby="error-password"
          />
          <p id="error-password" class="mt-2 text-sm text-red-600 hidden"></p>
        </div>

        <div>
          <label for="confirmPassword" class="block text-sm font-medium text-gray-700 mb-2">
            Confirm Password
          </label>
          <input
            id="confirmPassword"
            name="confirmPassword"
            type="password"
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent transition-colors"
            placeholder="Confirm your password"
            aria-describedby="error-confirmPassword"
          />
          <p id="error-confirmPassword" class="mt-2 text-sm text-red-600 hidden"></p>
        </div>

        <button
          type="submit"
          class="w-full bg-teal-600 hover:bg-teal-700 text-white font-semibold py-3 px-4 rounded-lg transition-colors duration-200 focus:ring-2 focus:ring-teal-500 focus:ring-offset-2"
        >
          Create Account
        </button>
      </form>

      <script>
        (function(){
          const form = document.getElementById('signupForm');
          const nameEl = document.getElementById('name');
          const emailEl = document.getElementById('email');
          const passwordEl = document.getElementById('password');
          const confirmEl = document.getElementById('confirmPassword');

          function clearError(el) {
            const p = document.getElementById('error-' + el.id);
            if (p) { p.textContent = ''; p.classList.add('hidden'); }
            el.removeAttribute('aria-invalid');
          }

          function setError(el, msg) {
            const p = document.getElementById('error-' + el.id);
            if (p) { p.textContent = msg; p.classList.remove('hidden'); }
            el.setAttribute('aria-invalid', 'true');
          }

          form.addEventListener('submit', function(e){
            const newErrors = {};
            // Name
            if (!nameEl.value.trim()) {
              newErrors.name = 'Name is required';
            } else if (nameEl.value.trim().length < 2) {
              newErrors.name = 'Name must be at least 2 characters';
            }

            // Email
            if (!emailEl.value) {
              newErrors.email = 'Email is required';
            } else if (!/\S+@\S+\.\S+/.test(emailEl.value)) {
              newErrors.email = 'Email is invalid';
            }

            // Password
            if (!passwordEl.value) {
              newErrors.password = 'Password is required';
            } else if (passwordEl.value.length < 6) {
              newErrors.password = 'Password must be at least 6 characters';
            }

            // Confirm
            if (!confirmEl.value) {
              newErrors.confirmPassword = 'Please confirm your password';
            } else if (passwordEl.value !== confirmEl.value) {
              newErrors.confirmPassword = 'Passwords do not match';
            }

            // Clear previous
            ['name','email','password','confirmPassword'].forEach(id => {
              const el = document.getElementById(id);
              if (el) clearError(el);
            });

            // If errors, show inline and prevent submit
            if (Object.keys(newErrors).length > 0) {
              e.preventDefault();
              Object.keys(newErrors).forEach(k => {
                const el = document.getElementById(k === 'confirmPassword' ? 'confirmPassword' : k);
                if (el) setError(el, newErrors[k]);
              });
            }
          });
        })();
      </script>

      <div class="mt-6 text-center">
        <p class="text-gray-600">
          Already have an account?
          <a href="/auth/login" class="text-teal-600 hover:text-teal-700 font-semibold relative z-10">
            Sign in here
          </a>
        </p>
      </div>
    </section>
  </div>
</main>
{% endblock %}
