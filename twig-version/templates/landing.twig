{% extends 'base.twig' %}

{% block title %}TicketStressed - Landing{% endblock %}

{% block content %}
<main class="min-h-screen max-w-[1440px] bg-gradient-to-br from-teal-50 via-gray-50 to-indigo-100 w-full">
  <!-- Hero Section with Wavy Background -->
  <section class="relative overflow-hidden">
    <!-- Decorative Circles -->
    <div class="absolute top-20 left-10 w-32 h-32 bg-teal-200 rounded-full opacity-60 animate-pulse"></div>
    <div class="absolute top-40 right-20 w-24 h-24 bg-gray-200 rounded-full opacity-50 animate-bounce"></div>
    <div class="absolute bottom-20 left-1/4 w-16 h-16 bg-indigo-200 rounded-full opacity-40 animate-pulse"></div>
    
    <!-- Hero Content -->
    <div class="relative z-10 w-full mx-auto px-4 sm:px-6 lg:px-8 pt-20 pb-32">
      <header class="text-center">
        <h1 class="text-5xl md:text-7xl font-bold text-gray-900 mb-6">
          Ticket<span class="text-teal-600">Stressed</span>
        </h1>
        <p class="text-xl md:text-2xl text-gray-700 mb-8 max-w-3xl mx-auto">
          At TicketStressed, your ticket gets the spotlight it deserves. 
          Discover, buy, and sell event tickets that are sold out elsewhere — 
          all in one seamless platform.
        </p>
        <nav class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/auth/login" class="bg-teal-600 hover:bg-teal-700 text-white px-8 py-4 rounded-lg text-lg font-semibold transition-colors duration-200 shadow-lg hover:shadow-xl">
            Login
          </a>
          <a href="/auth/signup" class="bg-white hover:bg-gray-50 text-teal-600 px-8 py-4 rounded-lg text-lg font-semibold border-2 border-teal-600 transition-colors duration-200 shadow-lg hover:shadow-xl">
            Get Started
          </a>
        </nav>
      </header>
    </div>
    
    <!-- Wavy Background -->
    <div class="absolute bottom-0 left-0 w-full">
      <img src="/assets/wavy-background.svg" alt="Wavy background" class="relative block w-full h-16 text-teal-200" />
    </div>
  </section>

  <!-- Features Section -->
  <section class="w-full mx-auto px-4 sm:px-6 lg:px-8 py-20">
    <header class="text-center mb-16">
      <h2 class="text-4xl font-bold text-gray-900 mb-4">Why Choose TicketStressed?</h2>
      <p class="text-xl text-gray-600">Making ticket management stress-free for everyone</p>
    </header>
    
    <div class="grid md:grid-cols-3 gap-8">
      <article class="bg-white rounded-xl shadow-lg p-8 hover:shadow-xl transition-shadow duration-300">
        <div class="w-16 h-16 bg-teal-100 rounded-full flex items-center justify-center mb-6 mx-auto">
          <svg class="w-8 h-8 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold text-gray-900 mb-4">Easy Ticket Management</h3>
        <p class="text-gray-600">Create, view, edit, and delete tickets with our intuitive interface.</p>
      </article>
      
      <article class="bg-white rounded-xl shadow-lg p-8 hover:shadow-xl transition-shadow duration-300">
        <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mb-6 mx-auto">
          <svg class="w-8 h-8 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold text-gray-900 mb-4">Real-time Updates</h3>
        <p class="text-gray-600">Stay updated with instant notifications and status changes.</p>
      </article>
      
      <article class="bg-white rounded-xl shadow-lg p-8 hover:shadow-xl transition-shadow duration-300">
        <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mb-6 mx-auto">
          <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold text-gray-900 mb-4">Secure & Reliable</h3>
        <p class="text-gray-600">Your data is protected with enterprise-grade security measures.</p>
      </article>
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-white border-t border-gray-200 py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h3 class="text-2xl font-bold text-gray-900 mb-2">TicketStressed</h3>
        <p class="text-gray-600 mb-6">Making ticket management stress-free for everyone</p>
        <div class="flex justify-center space-x-6 mb-6">
          <a href="#" class="text-gray-400 hover:text-teal-600 transition-colors">
            <span class="sr-only">Twitter</span>
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"></path>
            </svg>
          </a>
          <a href="#" class="text-gray-400 hover:text-teal-600 transition-colors">
            <span class="sr-only">GitHub</span>
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"></path>
            </svg>
          </a>
        </div>
        <p class="text-gray-500 text-sm">© 2024 TicketStressed. All rights reserved.</p>
      </div>
    </div>
  </footer>
</main>
{% endblock %}
