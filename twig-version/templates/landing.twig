{% extends 'base.twig' %}

{% block title %}TicketStressed - Landing{% endblock %}

{% block content %}
<main class="min-h-screen max-w-[1440px] bg-gradient-to-br from-teal-50 via-gray-50 to-indigo-100 w-full">
  <!-- Hero Section with Wavy Background -->
  <section class="relative overflow-hidden">
    <!-- Decorative Circles -->
    <div class="absolute top-20 left-10 w-32 h-32 bg-teal-200 rounded-full opacity-60 animate-pulse"></div>
    <div class="absolute top-40 right-20 w-24 h-24 bg-gray-200 rounded-full opacity-50 animate-bounce"></div>
    <div class="absolute bottom-20 left-1/4 w-16 h-16 bg-indigo-200 rounded-full opacity-40 animate-pulse"></div>
    
    <!-- Hero Content -->
    <div class="relative z-10 w-full mx-auto px-4 sm:px-6 lg:px-8 pt-20 pb-32">
      <header class="text-center">
        <h1 class="text-5xl md:text-7xl font-bold text-gray-900 mb-6">
          Ticket<span class="text-teal-600">Stressed</span>
        </h1>
        <p class="text-xl md:text-2xl text-gray-700 mb-8 max-w-3xl mx-auto">
          At TicketStressed, your ticket gets the spotlight it deserves. 
          Discover, buy, and sell event tickets that are sold out elsewhere â€” 
          all in one seamless platform.
        </p>
        <nav class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/auth/login" class="bg-teal-600 hover:bg-teal-700 text-white px-8 py-4 rounded-lg text-lg font-semibold transition-colors duration-200 shadow-lg hover:shadow-xl">
            Login
          </a>
          <a href="/auth/signup" class="bg-white hover:bg-gray-50 text-teal-600 px-8 py-4 rounded-lg text-lg font-semibold border-2 border-teal-600 transition-colors duration-200 shadow-lg hover:shadow-xl">
            Get Started
          </a>
        </nav>
      </header>
    </div>
    
    <!-- Wavy Background -->
    <div class="absolute bottom-0 left-0 w-full">
    <img src="/assets/landing-waves.svg" alt="Decorative wavy background" class="relative block w-full h-16" />

    </div>
  </section>

  <!-- Features Section -->
  <section class="w-full mx-auto px-4 sm:px-6 lg:px-8 py-20">
    <header class="text-center mb-16">
      <h2 class="text-4xl font-bold text-gray-900 mb-4">Why Choose TicketStressed?</h2>
      <p class="text-xl text-gray-600">Making ticket management stress-free for everyone</p>
    </header>
    
    <div class="grid md:grid-cols-3 gap-8">
      <article class="bg-white rounded-xl shadow-lg p-8 hover:shadow-xl transition-shadow duration-300">
        <div class="w-16 h-16 bg-teal-100 rounded-full flex items-center justify-center mb-6 mx-auto">
          <svg stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 24 24" aria-hidden="true" class="w-8 h-8 text-teal-600" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd"d="M1.5 6.375c0-1.036.84-1.875 1.875-1.875h17.25c1.035 0 1.875.84 1.875 1.875v3.026a.75.75 0 0 1-.375.65 2.249 2.249 0 0 0 0 3.898.75.75 0 0 1 .375.65v3.026c0 1.035-.84 1.875-1.875 1.875H3.375A1.875 1.875 0 0 1 1.5 17.625v-3.026a.75.75 0 0 1 .374-.65 2.249 2.249 0 0 0 0-3.898.75.75 0 0 1-.374-.65V6.375Zm15-1.125a.75.75 0 0 1 .75.75v.75a.75.75 0 0 1-1.5 0V6a.75.75 0 0 1 .75-.75Zm.75 4.5a.75.75 0 0 0-1.5 0v.75a.75.75 0 0 0 1.5 0v-.75Zm-.75 3a.75.75 0 0 1 .75.75v.75a.75.75 0 0 1-1.5 0v-.75a.75.75 0 0 1 .75-.75Zm.75 4.5a.75.75 0 0 0-1.5 0V18a.75.75 0 0 0 1.5 0v-.75ZM6 12a.75.75 0 0 1 .75-.75H12a.75.75 0 0 1 0 1.5H6.75A.75.75 0 0 1 6 12Zm.75 2.25a.75.75 0 0 0 0 1.5h3a.75.75 0 0 0 0-1.5h-3Z" clip-rule="evenodd"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold text-gray-900 mb-4">Easy Ticket Management</h3>
        <p class="text-gray-600">Create, view, edit, and delete tickets with our intuitive interface.</p>
      </article>
      
      <article class="bg-white rounded-xl shadow-lg p-8 hover:shadow-xl transition-shadow duration-300">
        <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mb-6 mx-auto">
          <svg stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 24 24" aria-hidden="true" class="w-8 h-8 text-blue-600" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25ZM12.75 6a.75.75 0 0 0-1.5 0v6c0 .414.336.75.75.75h4.5a.75.75 0 0 0 0-1.5h-3.75V6Z" clip-rule="evenodd"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold text-gray-900 mb-4">Real-time Updates</h3>
        <p class="text-gray-600">Stay updated with instant notifications and status changes.</p>
      </article>
      
      <article class="bg-white rounded-xl shadow-lg p-8 hover:shadow-xl transition-shadow duration-300">
        <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mb-6 mx-auto">
          <svg stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 24 24" aria-hidden="true" class="w-8 h-8 text-green-600" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M12.516 2.17a.75.75 0 0 0-1.032 0 11.209 11.209 0 0 1-7.877 3.08.75.75 0 0 0-.722.515A12.74 12.74 0 0 0 2.25 9.75c0 5.942 4.064 10.933 9.563 12.348a.749.749 0 0 0 .374 0c5.499-1.415 9.563-6.406 9.563-12.348 0-1.39-.223-2.73-.635-3.985a.75.75 0 0 0-.722-.516l-.143.001c-2.996 0-5.717-1.17-7.734-3.08Zm3.094 8.016a.75.75 0 1 0-1.22-.872l-3.236 4.53L9.53 12.22a.75.75 0 0 0-1.06 1.06l2.25 2.25a.75.75 0 0 0 1.14-.094l3.75-5.25Z" clip-rule="evenodd"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold text-gray-900 mb-4">Secure & Reliable</h3>
        <p class="text-gray-600">Your data is protected with enterprise-grade security measures.</p>
      </article>
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-gray-900 text-white py-12" data-testid="test-react-footer">
    <div class="w-full mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h3 class="text-2xl font-bold mb-4" data-testid="test-react-footer-title">TicketStressed</h3>
        <p class="text-gray-400 mb-6" data-testid="test-react-footer-description">Making ticket management stress-free for everyone</p>
        <nav class="flex justify-center space-x-6" data-testid="test-react-footer-links">
          <a href="#" class="text-gray-400 hover:text-white transition-colors" data-testid="test-react-privacy-link">Privacy Policy</a>
          <a href="#" class="text-gray-400 hover:text-white transition-colors" data-testid="test-react-terms-link">Terms of Service</a>
          <a href="#" class="text-gray-400 hover:text-white transition-colors" data-testid="test-react-contact-link">Contact</a>
        </nav>
        <div class="mt-8 pt-8 border-t border-gray-800">
          <p class="text-gray-400" id="copyright" data-testid="test-react-copyright"></p>
        </div>
      </div>
    </div>
  </footer>

  <script>
    (function(){
      const copyright = document.getElementById('copyright');
      copyright.textContent = `&copy; ${new Date().getFullYear()} TicketStressed. All rights reserved.`
    })();
  </script>
</main>
{% endblock %}
