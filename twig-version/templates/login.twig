{% extends 'base.twig' %}

{% block title %}Login - TicketStressed{% endblock %}

{% block content %}
<main class="min-h-screen max-w-[1440px] w-full relative bg-gradient-to-br from-teal-50 via-gray-50 to-indigo-100 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="absolute top-20 left-10 w-32 h-32 bg-teal-200 rounded-full opacity-60 animate-pulse"></div>
  <div class="absolute bottom-20 right-20 w-24 h-24 bg-blue-200 rounded-full opacity-50 animate-bounce"></div>

  <div class="max-w-md w-full space-y-8">
    <section class="bg-white rounded-2xl shadow-xl p-8">
      <a href="/" class="relative z-10 mb-4 inline-flex items-center gap-2 text-sm text-gray-600 hover:text-gray-800">
        ‚Üê Go back
      </a>
      
      <header class="text-center">
        <h2 class="text-3xl font-bold text-gray-900 mb-2">
          Welcome to <span class="text-teal-600">TicketStressed</span>
        </h2>
        <p class="text-gray-600 mb-8">Sign in to your account</p>
      </header>

  {# Errors are shown via toast in base.twig #}

      <form action="/auth/login" method="POST" class="space-y-6" id="loginForm" novalidate>
        <div>
          <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
            Email Address
          </label>
          <input
            id="email"
            name="email"
            type="email"
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent transition-colors"
            placeholder="Enter your email"
            aria-describedby="login-error-email"
          />
          <p id="login-error-email" class="mt-2 text-sm text-red-600 hidden"></p>
        </div>

        <div>
          <label for="password" class="block text-sm font-medium text-gray-700 mb-2">
            Password
          </label>
          <input
            id="password"
            name="password"
            type="password"
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent transition-colors"
            placeholder="Enter your password"
            aria-describedby="login-error-password"
          />
          <p id="login-error-password" class="mt-2 text-sm text-red-600 hidden"></p>
        </div>

        <button
          type="submit"
          class="w-full bg-teal-600 hover:bg-teal-700 text-white font-semibold py-3 px-4 rounded-lg transition-colors duration-200 focus:ring-2 focus:ring-teal-500 focus:ring-offset-2"
        >
          Sign In
        </button>
      </form>

      <script>
        (function(){
          const form = document.getElementById('loginForm');
          const emailEl = document.getElementById('email');
          const passwordEl = document.getElementById('password');

          function clearError(id) {
            const p = document.getElementById(id);
            if (p) { p.textContent = ''; p.classList.add('hidden'); }
          }

          function setError(id, msg) {
            const p = document.getElementById(id);
            if (p) { p.textContent = msg; p.classList.remove('hidden'); }
          }

          form.addEventListener('submit', function(e){
            const newErrors = {};
            if (!emailEl.value) {
              newErrors.email = 'Email is required';
            } else if (!/\S+@\S+\.\S+/.test(emailEl.value)) {
              newErrors.email = 'Email is invalid';
            }

            if (!passwordEl.value) {
              newErrors.password = 'Password is required';
            } else if (passwordEl.value.length < 6) {
              newErrors.password = 'Password must be at least 6 characters';
            }

            clearError('login-error-email');
            clearError('login-error-password');

            if (Object.keys(newErrors).length > 0) {
              e.preventDefault();
              if (newErrors.email) setError('login-error-email', newErrors.email);
              if (newErrors.password) setError('login-error-password', newErrors.password);
            }
          });
        })();
      </script>

      <div class="mt-6 text-center">
        <p class="text-gray-600">
          Don't have an account?
          <a href="/auth/signup" class="text-teal-600 hover:text-teal-700 font-semibold relative z-10">
            Sign up here
          </a>
        </p>
      </div>

      <aside class="mt-6 p-4 bg-blue-50 rounded-lg" data-testid="test-twig-demo-credentials">
        <p class="text-sm text-blue-800 font-medium">Demo Credentials:</p>
        <p class="text-sm text-blue-700">Email: demo@ticketstressed.com</p>
        <p class="text-sm text-blue-700">Password: password123</p>
      </aside>
    </section>
  </div>
</main>
{% endblock %}
