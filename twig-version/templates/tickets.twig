{% extends 'base.twig' %}

{% block title %}Ticket Management - TicketStressed{% endblock %}

{% block content %}
<div class="min-h-screen max-w-[1440px] bg-gradient-to-br from-teal-50 via-gray-50 to-indigo-100 w-full">
  <!-- Navigation -->
  <nav class="bg-white shadow-lg w-full">
    <div class="mx-auto px-4 sm:px-6 lg:px-8 relative w-full">
      <div class="flex items-center justify-between h-16">
        <div class="flex items-center space-x-4">
          <a href="/dashboard" class="text-2xl font-bold text-teal-600">TicketStressed</a>
          <span class="hidden md:inline-block text-gray-500">|</span>
          <span class="text-gray-700 hidden sm:inline-block">Ticket Management</span>
        </div>

        <div class="flex items-center space-x-4">
          <a href="/dashboard" class="text-gray-600 hover:text-gray-900 transition-colors">Dashboard</a>
          <a href="/logout" class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-lg transition-colors duration-200">Logout</a>
        </div>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header -->
    <div class="flex justify-between items-center mb-8">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Ticket Management</h1>
        <p class="text-gray-600 mt-2">Manage all your tickets in one place</p>
      </div>
      <button onclick="document.getElementById('ticket-form').scrollIntoView({behavior: 'smooth'})" class="bg-teal-600 hover:bg-teal-700 text-white px-6 py-3 rounded-lg font-semibold transition-colors duration-200 shadow-lg hover:shadow-xl">
        Create New Ticket
      </button>
    </div>

    <!-- Ticket Form -->
    <div id="ticket-form" class="bg-white rounded-xl shadow-xl p-8 mb-8">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">Create New Ticket</h2>

      <form action="/tickets" method="POST" class="space-y-6">
        <input type="hidden" name="action" value="create">
        
        <div>
          <label for="title" class="block text-sm font-medium text-gray-700 mb-2">Title *</label>
          <input id="title" name="title" type="text" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent transition-colors" placeholder="Enter ticket title" aria-describedby="error-title">
          <p id="error-title" class="mt-2 text-sm text-red-600 hidden"></p>
        </div>

        <div>
          <label for="description" class="block text-sm font-medium text-gray-700 mb-2">Description</label>
          <textarea id="description" name="description" rows="4" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent transition-colors" placeholder="Enter ticket description" aria-describedby="error-description"></textarea>
          <p id="error-description" class="mt-2 text-sm text-red-600 hidden"></p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label for="status" class="block text-sm font-medium text-gray-700 mb-2">Status *</label>
            <select id="status" name="status" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent transition-colors">
              <option value="open">Open</option>
              <option value="in_progress">In Progress</option>
              <option value="closed">Closed</option>
            </select>
            <p id="error-status" class="mt-2 text-sm text-red-600 hidden"></p>
          </div>

          <div>
            <label for="priority" class="block text-sm font-medium text-gray-700 mb-2">Priority</label>
            <select id="priority" name="priority" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent transition-colors">
              <option value="low">Low</option>
              <option value="medium" selected>Medium</option>
              <option value="high">High</option>
            </select>
          </div>
        </div>

        <div class="flex justify-end">
          <button type="submit" class="px-6 py-3 bg-teal-600 hover:bg-teal-700 text-white rounded-lg font-semibold transition-colors duration-200">
            Create Ticket
          </button>
        </div>
      </form>
    </div>

    <script>
      (function(){
        const form = document.querySelector('#ticket-form form');
        if (!form) return;
        const title = document.getElementById('title');
        const status = document.getElementById('status');
        const description = document.getElementById('description');

        function showError(id, msg) {
          const p = document.getElementById('error-' + id);
          if (p) { p.textContent = msg; p.classList.remove('hidden'); }
        }

        function clearError(id) {
          const p = document.getElementById('error-' + id);
          if (p) { p.textContent = ''; p.classList.add('hidden'); }
        }

        form.addEventListener('submit', function(e){
          const newErrors = {};
          const t = { value: title ? title.value : '' };
          const s = { value: status ? status.value : '' };
          const d = { value: description ? description.value : '' };

          if (!t.value.trim()) {
            newErrors.title = 'Title is required';
          } else if (t.value.trim().length < 3) {
            newErrors.title = 'Title must be at least 3 characters';
          }

          if (!s.value) {
            newErrors.status = 'Status is required';
          } else if (!['open','in_progress','closed'].includes(s.value)) {
            newErrors.status = 'Status must be open, in_progress, or closed';
          }

          if (d.value && d.value.length > 500) {
            newErrors.description = 'Description must be less than 500 characters';
          }

          // Clear previous
          ['title','status','description'].forEach(id => clearError(id));

          if (Object.keys(newErrors).length > 0) {
            e.preventDefault();
            Object.keys(newErrors).forEach(k => showError(k, newErrors[k]));
          }
        });
      })();
    </script>

    <!-- Tickets List -->
    <div class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-6">
      {% if tickets|length == 0 %}
        <div class="col-span-full text-center py-12 bg-white rounded-xl shadow-lg">
          <div class="w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">No tickets yet</h3>
          <p class="text-gray-600">Create your first ticket to get started</p>
        </div>
      {% else %}
        {% for ticket in tickets %}
          <div class="bg-white rounded-xl shadow-lg p-6 hover:shadow-xl transition-shadow duration-300">
            <div class="flex justify-between items-start mb-4">
              <h3 class="text-lg font-semibold text-gray-900">{{ ticket.title }}</h3>
              <form action="/tickets" method="POST" class="inline" onsubmit="return confirm('Are you sure you want to delete this ticket?')">
                <input type="hidden" name="action" value="delete">
                <input type="hidden" name="id" value="{{ ticket.id }}">
                <button type="submit" class="text-red-600 hover:text-red-800 transition-colors">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                  </svg>
                </button>
              </form>
            </div>

            {% if ticket.description %}
              <p class="text-gray-600 mb-4">{{ ticket.description }}</p>
            {% endif %}

            <div class="flex flex-wrap gap-2 mb-4">
              {% set statusColors = {
                'open': 'bg-green-100 text-green-800',
                'in_progress': 'bg-amber-100 text-yellow-800',
                'closed': 'bg-gray-100 text-gray-800'
              } %}
              <span class="px-3 py-1 rounded-full text-sm font-medium {{ statusColors[ticket.status] }}">
                {{ ticket.status|replace({'_': ' '})|upper }}
              </span>
              {% set priorityColors = {
                'high': 'bg-red-100 text-red-800',
                'medium': 'bg-yellow-100 text-yellow-800',
                'low': 'bg-green-100 text-green-800'
              } %}
              <span class="px-3 py-1 rounded-full text-sm font-medium {{ priorityColors[ticket.priority] }}">
                {{ ticket.priority|upper }}
              </span>
            </div>

            <div class="text-sm text-gray-500">
              <p>Created: {{ ticket.createdAt }}</p>
              <p>By: {{ ticket.createdBy }}</p>
            </div>
          </div>
        {% endfor %}
      {% endif %}
    </div>
  </div>
</div>
{% endblock %}
